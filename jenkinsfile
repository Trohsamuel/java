pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Trohsamuel/java.git', credentialsId: 'github-credentials-id'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Deploy') {
            steps {
                sh """
                # Déployer l'application
                echo 'Déploiement de l'application...'
                """
            }
        }
    }
    triggers {
        pollSCM('H/2 * * * *')
    }
}
